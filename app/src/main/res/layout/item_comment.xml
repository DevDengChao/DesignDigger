<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_comment_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/dribbble_ball_mark" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_comment_userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="User Name" />

            <TextView
                android:id="@+id/item_comment_createAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="2012-03-15 04:24:39" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_comment_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="2dp"
                android:layout_weight="1"
                tools:text="Bla-Bla Bla-Bla Bla-Bla Bla-Bla Bla-Bla Bla-Bla Bla-Bla Bla-Bla Bla-Bla Bla-Bla Bla-Bla Bla-Bla Bla-Bla " />

            <TextView
                android:id="@+id/item_comment_likesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableTop="@drawable/item_like_unselected"
                android:gravity="center"
                tools:text="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>