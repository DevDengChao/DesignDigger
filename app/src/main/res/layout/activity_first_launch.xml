<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/firstLaunch_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/firstLaunch_indicator1"
            style="@style/FirstLaunchIndicator"
            android:src="@drawable/first_launch_indicator" />

        <ImageView
            android:id="@+id/firstLaunch_indicator2"
            style="@style/FirstLaunchIndicator"
            android:src="@drawable/first_launch_indicator" />

        <ImageView
            android:id="@+id/firstLaunch_indicator3"
            style="@style/FirstLaunchIndicator"
            android:src="@drawable/first_launch_indicator" />
    </LinearLayout>
</RelativeLayout>