<resources>
    <!--    Activity style start    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Activity" parent="AppTheme" />

    <style name="Activity.Settings" />

    <style name="Activity.Settings.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <!--    Activity style end    -->
    <!--    Fragment style start    -->
    <style name="Fragment" parent="AppTheme" />

    <style name="Fragment.Visitor" />

    <style name="Fragment.Visitor.Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Fragment.Player" />

    <style name="Fragment.Player.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">2dp</item>
    </style>

    <!--    Fragment style end    -->
    <!--    Item style start    -->
    <style name="Item" parent="AppTheme" />

    <style name="Item.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!--    Item style end    -->
</resources>
