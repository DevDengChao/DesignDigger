<resources>
    <!--    Activity style start    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FirstLaunch" parent="AppTheme" />

    <style name="FirstLaunch.TextView" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!--    Activity style end    -->
    <!--    Fragment style start    -->
    <style name="Fragment" parent="AppTheme" />

    <style name="Fragment.Visitor" />

    <style name="Fragment.Visitor.Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--    Fragment style end    -->
    <!--    Item style start    -->
    <style name="Item" parent="AppTheme" />

    <style name="Item.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!--    Item style end    -->
</resources>
